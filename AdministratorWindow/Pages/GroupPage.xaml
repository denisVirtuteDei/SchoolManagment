<Page x:Class="SchoolTableCursed.AdministratorWindow.Pages.GroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolTableCursed.AdministratorWindow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupPage">

    <Grid>
        <StackPanel Orientation="Vertical" TextElement.FontFamily="georgia" 
                    Margin="5" HorizontalAlignment="Left">
            <TextBlock Margin="5,5,5,0" Text="Номер группы" FontSize="14"/>
            <TextBox x:Name="GroupNumberAdd" Margin="5,0,5,5" Width="100" FontSize="14"/>

            <Button x:Name="GroupAddButton" FontFamily="Segoe UI Symbol" Content="&#xE081;" Margin="5,10,5,0" FontSize="20"
                    VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="GroupAddButton_Click"/>

        </StackPanel>
    </Grid>
</Page>
